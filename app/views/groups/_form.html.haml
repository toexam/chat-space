= form_for group do |f|
  - if group.errors.any?
    .chat-group-form__errors
      %h2= "#{group.errors.full_messages.count}件のエラーが発生しました。"
      %ul
        - group.errors.full_messages.each do |message|
          %li= message

  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label :name, class: 'chat-group-form__label' do
        %p グループ名
    .chat-group-form__field--right
      = f.text_field :name, class: 'chat__group_name chat-group-form__input', placeholder: 'グループ名を入力してください'

  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label :search, class: "chat-group-form__label" do
        チャットメンバーを追加
    .chat-group-form__field--right
      .chat-group-form__search.clearfix
        = f.text_field :search, class:'chat-group-form__input', id: 'user-search-field', value: "", placeholder: '追加したいユーザー名を入力してください', type: 'text'

      #user-search-result

  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      %label.chat-group-form__label{:for => "chat_group_チャットメンバー"} チャットメンバー

    .chat-group-form__field--right
      .chat-group-users.js-add-user
        .chat-group-user.clearfix.js-chat-member{id: current_user.id}
          =f.text_field :chat_group, type: "hidden", name: "group[user_ids][]", value: "#{current_user.id}", id: "group_user_ids"
          %p.chat-group-user__name
            =current_user.name

      .chat-group-users.js-add-user
        -group.users.each do |user|
          - if user.id == current_user.id
            - next
          .chat-group-user.clearfix.js-chat-member{id: user.id}
            =f.text_field :chat_group, type: "hidden", name: "group[user_ids][]", value: "#{user.id}", id: "group_user_ids"
            %p.chat-group-user__name
              =user.name
            .user-search-remove.chat-group-user__btn.chat-group-user__btn--remove.js-remove-btn 削除

        #chat-group-users


  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit class: 'chat-group-form__action-btn'
